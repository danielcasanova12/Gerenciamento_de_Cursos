@page
@model Cursos.RazorPages.Pages.Cursos.IndexCursos
@using Cursos.RazorPages.Pages.Cursos
@{
    ViewData["Title"] = "Lista de Cursos";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Lista de Cursos</title>
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Lista de Cursos</h1>

        <p>
            <a class="btn btn-primary" asp-page="/Cursos/Create">Criar novo Curso</a>
        </p>
        <form method="post" class="mb-4">
            <div class="input-group">
                <input type="text" asp-for="NomeFiltro" class="form-control" placeholder="Filtrar por nome">
                <div class="input-group-append">
                    <input type="submit" class="btn btn-primary" value="Filtrar">
                    <a asp-page="/Cursos/Index" class="btn btn-secondary">Limpar Filtro</a>
                </div>
            </div>
        </form>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Data de Início <a asp-page="/Cursos/Index" asp-route-Ordenacao="asc">(asc)</a> <a asp-page="/Cursos/Index" asp-route-Ordenacao="desc">(desc)</a></th>
                    <th>Data de Término</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var curso in Model.CursosList)
                {
                    <tr>
                        <td>@curso.NomeCurso</td>
                        <td>@curso.Descricao</td>
                        <td>@curso.DataInicio</td>
                        <td>@curso.DataTermino</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-page="./Editar" asp-route-id="@curso.CursoId">Editar</a>
                            <a class="btn btn-info btn-sm" asp-page="./Visualizar" asp-route-id="@curso.CursoId">Detalhes</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@curso.CursoId">Excluir</a>
                            <a class="btn btn-success btn-sm" asp-page="./AdicionarAluno" asp-route-id="@curso.CursoId">Adicionar aluno</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
