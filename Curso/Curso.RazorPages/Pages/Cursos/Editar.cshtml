@page "{id:int}"
@model Cursos.RazorPages.Pages.Cursos.EditModel
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Editar Curso</title>
</head>
<div class="container justify-content-center">
    <h1 class="mt-4">Editar Curso</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CursoToEdit.CursoId" />

                <div class="form-group">
                    <label asp-for="CursoToEdit.NomeCurso" class="font-weight-bold">Nome do Curso:</label>
                    <input asp-for="CursoToEdit.NomeCurso" class="form-control" />
                    <span asp-validation-for="CursoToEdit.NomeCurso" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CursoToEdit.Descricao" class="font-weight-bold">Descrição do Curso:</label>
                    <input asp-for="CursoToEdit.Descricao" class="form-control" />
                    <span asp-validation-for="CursoToEdit.Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CursoToEdit.DataInicio" class="font-weight-bold">Data de Início:</label>
                    <input asp-for="CursoToEdit.DataInicio" class="form-control" />
                    <span asp-validation-for="CursoToEdit.DataInicio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CursoToEdit.DataTermino" class="font-weight-bold">Data de Término:</label>
                    <input asp-for="CursoToEdit.DataTermino" class="form-control" />
                    <span asp-validation-for="CursoToEdit.DataTermino" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Salvar">
                    <a asp-page="/Cursos/Index" class="btn btn-secondary">Cancelar</a>
                    <a asp-page="Index" class="btn btn-primary">Voltar à lista de cursos</a>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(ViewData["MensagemErro"] as string))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["MensagemErro"]
                </div>
            }

            @if (ViewData["ShowSuccessAlert"] != null && (bool)ViewData["ShowSuccessAlert"])
            {
                <div class="alert alert-success" role="alert">
                    Curso editado com sucesso!
                </div>
            }
        </div>
    </div>
</div>