@page "{id:int}"
@model Cursos.RazorPages.Pages.Cursos.EditModel
<h1>Editar Curso</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CursoToEdit.CursoId" />

            <div class="form-group">
                <label asp-for="CursoToEdit.NomeCurso">Nome do Curso:</label>
                <input asp-for="CursoToEdit.NomeCurso" class="text-danger" />
                <span asp-validation-for="CursoToEdit.NomeCurso" class="form-control"></span>
            </div>

            <div class="form-group">
                <label asp-for="CursoToEdit.Descricao">Descrição do Curso:</label>
                <input asp-for="CursoToEdit.Descricao" class="text-danger" />
                <span asp-validation-for="CursoToEdit.Descricao" class="form-control"></span>
            </div>

            <div class="form-group">
                <label asp-for="CursoToEdit.DataInicio">Data de Início:</label>
                <input asp-for="CursoToEdit.DataInicio" class="text-danger" />
                <span asp-validation-for="CursoToEdit.DataInicio" class="form-control"></span>
            </div>

            <div class="form-group">
                <label asp-for="CursoToEdit.DataTermino">Data de Término:</label>
                <input asp-for="CursoToEdit.DataTermino" class="text-danger" />
                <span asp-validation-for="CursoToEdit.DataTermino" class="form-control"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar">
                <a asp-page="/Cursos/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
