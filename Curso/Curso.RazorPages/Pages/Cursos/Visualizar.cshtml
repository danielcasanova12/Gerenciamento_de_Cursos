@page "{id:int}"
@model Cursos.RazorPages.Pages.Cursos.VisualizarModel

<h1>Detalhes do Curso</h1>

<div>
    <p><strong>Nome do Curso: </strong>@Model.CursoDetails.NomeCurso</p>
    <p><strong>Descrição: </strong>@Model.CursoDetails.Descricao</p>
    <p><strong>Data de Início: </strong>@Model.CursoDetails.DataInicio</p>
    <p><strong>Data de Término: </strong>@Model.CursoDetails.DataTermino</p>
</div>

<h2>Alunos Inscritos</h2>
<ul>
    @foreach (var aluno in Model.CursoDetails.Alunos)
    {
        <li>@aluno.NomeAluno</li>
    }
</ul>

<a asp-page="Index">Voltar para a lista de cursos</a>
