@page "{id:int}"
@model Cursos.RazorPages.Pages.Cursos.VisualizarModel
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilo personalizado para destacar os detalhes do curso */
        .curso-details {
            background-color: #f5f5f5;
            padding: 20px;
            border-radius: 5px;
            margin-top: 20px;
        }
    </style>
    <title>Visualizar Curso</title>
</head>
<body>
    <div class="container text-center"> <!-- Centralizar o conteúdo na tela -->
        <h1 class="mt-4">Detalhes do Curso</h1>

        <div class="curso-details">
            <p><strong>Nome do Curso: </strong>@Model.CursoDetails.NomeCurso</p>
            <p><strong>Descrição: </strong>@Model.CursoDetails.Descricao</p>
            <p><strong>Data de Início: </strong>@Model.CursoDetails.DataInicio</p>
            <p><strong>Data de Término: </strong>@Model.CursoDetails.DataTermino</p>
        </div>

        <h2 class="mt-4">Alunos Inscritos</h2>
<ul class="list-group">
    @foreach (var aluno in Model.AlunosMatriculados)
    {
        <li class="list-group-item">@aluno.NomeAluno</li>
    }
</ul>


        <a asp-page="Index" class="btn btn-primary mt-4">Voltar para a lista de cursos</a>
    </div>
</body>
</html>