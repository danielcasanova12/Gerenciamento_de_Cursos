@page
@model Cursos.RazorPages.Pages.Alunos.CreateModel
@{
    ViewData["Title"] = "Criar Aluno";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container mt-4">
        <h1>Criar Aluno</h1>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AlunoDetails.NomeAluno">Nome do Aluno:</label>
                        <input asp-for="AlunoDetails.NomeAluno" class="form-control" id="nomeAluno" />
                        <span asp-validation-for="AlunoDetails.NomeAluno" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AlunoDetails.Email">Email:</label>
                        <input asp-for="AlunoDetails.Email" class="form-control" id="emailAluno" />
                        <span asp-validation-for="AlunoDetails.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Salvar" id="btnSalvar">
                        <a asp-page="/Alunos/Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Alerta de sucesso (inicialmente oculto) -->
        @if (ViewData["ShowSuccessAlert"] != null && (bool)ViewData["ShowSuccessAlert"])
        {
            <div id="alert-success" class="alert alert-success alert-dismissible fade show" role="alert">
                Aluno criado com sucesso!
                <button type="button" class="close" aria-label="Fechar" onclick="fecharAlerta()">
                    <span aria-hidden="true">&times;</span>
                </button>
                <!-- Botão para voltar à lista de alunos -->
                <br>
                <a href="/Alunos/Index" class="btn btn-success mt-2">Voltar à Lista de Alunos</a>
            </div>
            <script>
                // Desabilitar o botão "Salvar" quando o alerta de sucesso é mostrado
                document.getElementById("btnSalvar").disabled = true;
                
            </script>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function fecharAlerta() {
            document.getElementById("nomeAluno").value = "";
            document.getElementById("emailAluno").value = "";
            document.getElementById("alert-success").style.display = "none";
            
            // Habilitar o botão "Salvar" quando o alerta de sucesso é fechado
            
            document.getElementById("btnSalvar").disabled = false;
            
        }
    </script>
</body>
</html>
