@page "{id:int}"
@model Cursos.RazorPages.Pages.Alunos.EditModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Editar Aluno</title>
</head>
<body>
    <div class="container mt-4">
        <h1>Editar Aluno</h1>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AlunoToEdit.AlunoId" />

                    <div class="form-group">
                        <label asp-for="AlunoToEdit.NomeAluno">Nome do Aluno:</label>
                        <input asp-for="AlunoToEdit.NomeAluno" class="form-control" />
                        <span asp-validation-for="AlunoToEdit.NomeAluno" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AlunoToEdit.Email">Email do Aluno:</label>
                        <input asp-for="AlunoToEdit.Email" class="form-control" />
                        <span asp-validation-for="AlunoToEdit.Email" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Salvar">
                        <a asp-page="/Alunos/Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
