@page "{id:int}"
@model Cursos.RazorPages.Pages.Alunos.EditModel
<h1>Editar Aluno</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlunoToEdit.AlunoId" />

            <div class="form-group">
                <label asp-for="AlunoToEdit.NomeAluno">Nome do Aluno:</label>
                <input asp-for="AlunoToEdit.NomeAluno" class="text-danger" />
                <span asp-validation-for="AlunoToEdit.NomeAluno" class="form-control"></span>
            </div>

            <div class="form-group">
                <label asp-for="AlunoToEdit.Email">Email do Aluno:</label>
                <input asp-for="AlunoToEdit.Email" class="text-danger" />
                <span asp-validation-for="AlunoToEdit.Email" class="form-control"></span>
            </div>

            <div class="form-group">
                <label asp-for="AlunoToEdit.DataInscricao">Data de Inscrição:</label>
                <input asp-for="AlunoToEdit.DataInscricao" class="text-danger" />
                <span asp-validation-for="AlunoToEdit.DataInscricao" class="form-control"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar">
                <a asp-page="/Alunos/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
