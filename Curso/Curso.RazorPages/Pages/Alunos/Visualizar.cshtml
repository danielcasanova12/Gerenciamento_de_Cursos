@page "{id:int}"
@model Cursos.RazorPages.Pages.Alunos.DetailsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Detalhes do Aluno</title>
</head>
<body>
    <div class="container mt-4">
        <h1>Detalhes do Aluno</h1>
        <div class="jumbotron">
            <p><strong>Nome do Aluno:</strong> @Model.AlunoDetails.NomeAluno</p>
            <p><strong>E-mail:</strong> @Model.AlunoDetails.Email</p>
            <p><strong>Data de Inscrição:</strong> @Model.AlunoDetails.DataInscricao</p>
        </div>
        <a asp-page="Index" class="btn btn-primary">Voltar para a lista de alunos</a>
    </div>
</body>
</html>
